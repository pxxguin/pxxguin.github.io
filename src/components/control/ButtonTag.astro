---
interface Props {
	size?: string;
	dot?: boolean;
	href?: string;
	label?: string;
	style?: string;
}
const { dot, href, label, style }: Props = Astro.props;
---
<a href={href} aria-label={label} class="btn-regular h-8 text-sm px-3 rounded-lg" style={style}>
    {dot && <div class="h-1 w-1 bg-[var(--btn-content)] dark:bg-[var(--card-bg)] transition rounded-md mr-2"></div>}
    <slot></slot>
</a>
